@using ProyectoDeTitulo.DL;
@using ProyectoDeTitulo.DBModels;
@model IEnumerable<ProyectoDeTitulo.DBModels.Permisos>
@{
    IEnumerable<Estado> listEstado = ProyectoDeTitulo.DL.EstadoDL.GetEstadoList();
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @listEstado.FirstOrDefault(x => x.ID == item.EstadoID).Nombre
            </td>
        </tr>
    }

</table>
